<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_background">

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="84dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_info_24" />

    <TextView
        android:id="@+id/txt_berhasil"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_below="@id/img_info"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/popup_register"
        android:textAllCaps="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_cek"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_berhasil"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/popup_register1" />

    <Button
        android:id="@+id/okbtn"
        android:layout_width="73dp"
        android:layout_height="33dp"
        android:layout_below="@+id/txt_cek"
        android:layout_centerHorizontal="true"
        android:background="@drawable/popup_background"
        android:fontFamily="@font/poppins_bold"
        android:text="ok"
        android:textStyle="bold" />


</RelativeLayout>